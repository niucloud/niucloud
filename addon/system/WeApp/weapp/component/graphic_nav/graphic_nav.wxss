.graphic-navigation {
  margin: 0;
  padding: 0;
}

.graphic-navigation::after {
  content: '';
  display: block;
  clear: both;
  height: 0;
}

.item {
  display: block;
  float: left;
}

.item .a {
  width: 100%;
  text-align: center;
}

.item .nav-image {
  max-width: 100%;
  max-height: 100%;
  vertical-align: middle;
}

.fixed .item .nav-image {
  width: 100%;
}

.item .nav-text {
  font-size: 12px;
}

/* 横向滚动 */

.horizontal-scroll {
  white-space: nowrap;
  overflow-x: auto;
}

.horizontal-scroll .item {
  display: inline-block;
  float: unset;
}

/* 文字导航 */

.graphic-navigation.text {
  height: 20px;
}

.text .item .nav-text {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  height: 20px;
  display: block;
  margin: 0 5px;
  font-size: 12px;
  line-height: 20px;
}
