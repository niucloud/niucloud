.motify {
  position: fixed;
  top: 35%;
  left: 50%;
  transform: translateX(-50%);
  -ms-transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
  padding: 10px;
  z-index: 999999;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 14px;
  line-height: 1.5em;
  border-radius: 3px;
  -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  opacity: 0.9;
}

.motify .i.show_type {
  width: 25px;
  height: 25px;
  display: block;
  margin: 10px auto 5px auto;
}

.motify .motify-inner {
  color: #fff !important;
  padding: 5px 10px;
  text-align: center;
  word-wrap: break-word;
}

.hide {
  display: none !important;
}
