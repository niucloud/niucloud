.search {
  position: fixed;
  top: 0;
  z-index: 998;
  width: 100%;
  height: 44px;
  transition: background 0.5s;
  -moz-transition: background 0.5s;
  -webkit-transition: background 0.5s;
  -o-transition: background 0.5s;
}

.left-img {
  position: absolute;
  left: 10px;
  top: 0;
  width: 20px;
  height: 44px;
  text-align: center;
  line-height: 44px;
}

.left-img .a, .search .right-img .a {
  height: 44px;
  overflow: hidden;
}

.self-adaption {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
}

.left-img .self-adaption, .right-img .self-adaption {
  max-width: 100%;
}

.search .search-form {
  padding: 7px 45px 0;
}

.search .search-form .search-box {
  border-radius: 20px;
  position: relative;
  background: #fff;
  height: 30px;
  overflow: hidden;
}

.search .search-form .search-box .search-icon {
  display: block;
  position: absolute;
  width: 30px;
  height: 30px;
  left: 6px;
  top: 50%;
  margin-top: -15px;
}

.search .search-form .search-box .search-icon .self-adaption {
  max-width: 70%;
  max-height: 70%;
}

.search .search-form .search-box .search-input {
  border: 0;
  margin: 0 0 0 40px;
  padding: 0;
  outline: 0;
  width: 100%;
  display: block;
  height: 30px;
  font-size: 12px;
}

.search .right-img {
  position: absolute;
  right: 10px;
  top: 0;
  width: 20px;
  height: 44px;
  text-align: center;
  line-height: 44px;
}
