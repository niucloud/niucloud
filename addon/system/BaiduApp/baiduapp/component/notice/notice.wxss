.notice-view {
  height: 50px;
  position: relative;
}

.notice-view .left-image {
  position: absolute;
  width: 60px;
  height: 100%;
  left: 0;
  top: 0;
}

.notice-view .left-image .img {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
  max-width: 80%;
  max-height: 80%;
}

.right-list {
  overflow: hidden;
  position: relative;
  height: 43px;
  padding-left: 60px;
  border-top: 7px solid transparent;
}

.right-list .ul {
  position: absolute;
  left: 60px;
  right: 0px;
  height: 36px;
}

.right-list .ul .li {
  font-size: 14px;
  height: 18px;
  line-height: 18px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 0;
  padding: 0;
}
